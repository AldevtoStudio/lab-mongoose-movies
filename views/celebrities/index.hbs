<h2>Celebrities:</h2>
<a href='/celebrities/create'>Create</a>
<ul>
  {{#each celebrities}}
    <li>
      <a href='/celebrities/{{_id}}'>
        <strong>{{name}}</strong>
      </a>
      <form method='POST' action='/celebrities/{{_id}}/delete'>
        <button>Delete</button>
      </form>
    </li>
  {{/each}}
</ul>