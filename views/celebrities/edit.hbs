<h2>Celebrity edit</h2>

{{#if message}}
  <b>There was an error editing this celebrity:</b>
  <i>{{message}}</i>
  <b>Please, try again:</b>
{{/if}}

<form method='POST' action='/celebrities/{{celebrity._id}}'>
  <label for='celebrity-name-input'>Celebrity Name</label>
  <input id='celebrity-name-input' type='text' name='name' placeholder='Name' value='{{celebrity.name}}' />
  <label for='celebrity-occupation-input'>Celebrity Occupation</label>
  <input id='celebrity-occupation-input' type='text' name='occupation' placeholder='Occupation' value='{{celebrity.occupation}}' />
  <label for='celebrity-catchPhrase-input'>Celebrity Catch Phrase</label>
  <input id='celebrity-catchPhrase-input' type='text' name='catchPhrase' placeholder='Catch Phrase' value='{{celebrity.catchPhrase}}' />
  <button>Edit Celebrity</button>
</form>